          <input type="text" class="form-control country autocomp" id="registeredCountry" name="registeredCountry" value="<%= profile.registeredCountry %>" required>
          <input type="hidden" name="saveRegisteredCountry">
          <select class='autocomp'>
            <option id="" value=""></option>
            <% for(i in countries) { %>
            <option id="<%= countries[i].id %>" value="<%= eval(countryKeys[i]) %>"><%= eval(countryKeys[i]) %></option>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label>Company Address*</label>
          <input type="text" class="form-control" id="companyAddress" name="companyAddress" value="<%= profile.companyAddress %>" required>
        </div>
        <div class="form-group">
          <label>Area Covered*</label>
          <input required type="text" class="form-control autocomp" id="areaCovered" name="areaCovered" value="<%= profile.areaCovered %>">
          <input type="hidden" name="saveArea">
          <select class='autocomp'>
            <option id="" value=""></option>
            <% for(i in areas) { %>
            <option id="<%= areas[i].id %>" value="<%= eval(regionKeys[i]) %>"><%= eval(regionKeys[i]) %></option>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label><%= translation.commonFields.contactMobileNumber %>*</label>
