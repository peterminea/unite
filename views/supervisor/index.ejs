  <script type="text/javascript">
    $(document).ready(function() {
      let token = $("input[name^='_csrf']").first().val();
      errorSuccess(Swal, '<%= errorMessage %>', '<%= successMessage %>');
      //prepareSortTable();
                   
      setTimeout(function() {    
        <% if(keys != null) { %>
        let i = 0, indexes = [];

        $('a.nav-link').each(function(ind, elem) {      
          indexes.push($(elem).attr('index'));
        });

        <% for(let k in keys) { %>   
        if(isInArray(i, indexes)) {
          $('a.nav-link span').eq(i).text('<%= eval(keys[k]) %>');
        }
        i++;
        <% } } %>
      }, 500);
    });
  </script>
</head>

<body>
  <nav pos="1" user="supervisor" class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/supervisor">Government Supervisor Dashboard - UNITE</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </nav>
  
  <div class="container mt-4">
    <br><br>
    <div class="card">
      <div class="card-header">
        Hello!
      </div>
      <div class="card-body">
        <h5 class="card-title">Hello, <%= supervisor.organizationName %>! 
          <% if(supervisor.avatar != null && supervisor.avatar.length > 0) { %>
           <img src="<%= supervisor.avatar %>" style="height: 20px; width: 20px" onclick="window.open(this.src)">
          <% } %>
        </h5>        
        <p style="font-family: verdana; font-size: 11pt; color: green">With your UNITE ID, new buyers can register on the website and start searching for suppliers. If you change the UNITE ID, please announce your members.</p>
        <div class="form-group">
          <label>Your Unique UNITE ID</label>
          <input type="text" class="form-control" readonly value="<%= supervisor.organizationUniteID %>">
        </div>
      </div>
    </div>
  </div>
    </div>
    <div id="jqDiv" class="form-group">
      <table id="supervBuyers">
      </table>
      <div id='sbPager'>
      </div>
    </div>
    <script type="text/javascript">
    var data = [];
      
    var colModelSupervBuyers = [
      { name: 'deptAgencyGroup', label: 'Department/Agency Group', align: 'center', search: true, width: 150},
      { name: 'contactName', label: 'Contact Name', align: 'center', sorttype: 'text', search: true, width: 140},      
      { name: 'balance', label: 'Buyer\'s Balance', align: 'center', template: 'number', sorttype: function(cellValue, rowObject) { return parseFloat(rowObject.balance).toFixed(2);}, search: true, width: 100},
      { name: 'isActive', label: 'Is Active?', align: 'center', search: true, width: 100 },
      { name: 'totalBids', label: 'Total Bids Count', align: 'center', template: 'number', sorttype: function(cellValue, rowObject) { return parseInt(rowObject.totalBids);}, search: true, width: 50},
      { name: 'totalBidsPrice', label: 'Total Bids Price', align: 'center', formatter: totalBidsPriceFormatter, unformat: priceUnformatter, template: 'number', sorttype: function(cellValue, rowObject) { return parseFloat(parseFloat(rowObject.hiddenTotalBidsPrice).toFixed(2));}, search: true, width: 120},      
      { name: 'validBids', label: 'Valid Bids Count', align: 'center', template: 'number', sorttype: function(cellValue, rowObject) { return parseInt(rowObject.validBids);}, search: true, width: 50},
      { name: 'validBidsPrice', label: 'Valid Bids Price', align: 'center', formatter: validBidsPriceFormatter, unformat: priceUnformatter, template: 'number', sorttype: function(cellValue, rowObject) { return parseFloat(parseFloat(rowObject.hiddenValidBidsPrice).toFixed(2));}, search: true, width: 100 },
      { name: 'cancelledBids', label: 'Cancelled Bids Count', align: 'center', template: 'number', sorttype: function(cellValue, rowObject) { return parseInt(rowObject.cancelledBids);}, search: true, width: 50},
      { name: 'cancelledBidsPrice', label: 'Cancelled Bids Price', align: 'center', formatter: cancelledBidsPriceFormatter, unformat: priceUnformatter, template: 'number', sorttype: function(cellValue, rowObject) { return parseFloat(parseFloat(rowObject.hiddenCancelledBidsPrice).toFixed(2));}, search: true, width: 120},
      { name: 'expiredBids', label: 'Expired Bids Count', align: 'center', template: 'number', sorttype: function(cellValue, rowObject) { return parseInt(rowObject.expiredBids);}, search: true, width: 50},
      { name: 'expiredBidsPrice', label: 'Expired Bids Price', align: 'center', formatter: expiredBidsPriceFormatter, unformat: priceUnformatter, template: 'number', sorttype: function(cellValue, rowObject) { return parseFloat(parseFloat(rowObject.hiddenExpiredBidsPrice).toFixed(2));}, search: true, width: 100 },
      { name: 'removeBuyer', label: 'Process Removal', align: 'center', formatter: buyerRemovalFormatter, sortable: false, search: false, width: 100 },
      { name: 'chat', label: 'Chat with Buyer', align: 'center', formatter: chatFormatter, sortable: false, search: false, width: 100 },
      { name: "hiddenCurrency", hidden: true },      
      { name: "hiddenTotalBidsPrice", hidden: true },      
      { name: "hiddenValidBidsPrice", hidden: true },      
      { name: "hiddenCancelledBidsPrice", hidden: true },      
      { name: "hiddenExpiredBidsPrice", hidden: true },
      { name: 'supervisorId', hidden: true },
      { name: 'buyerId', hidden: true },
      { name: 'buyerOrganizationName', hidden: true },
      { name: 'supervisorOrganizationName', hidden: true },
      { name: 'index', hidden: true }
    ];
      
  <% let i = -1; if(buyers != null) { for (buyer of buyers) {i++; %>
  data.push({
    index: "<%= i %>",
    supervisorId: "<%= supervisor._id %>",
    buyerId: "<%= buyer._id %>",
    buyerOrganizationName: "<%= buyer.organizationName %>",
    supervisorOrganizationName: "<%= supervisor.organizationName %>",
    deptAgencyGroup: "<%= buyer.deptAgencyGroup %>",
    contactName: "<%= buyer.contactName %>",
    balance: "<%= buyer.balance %>",
    isActive: "<%= buyer.isActive %>",
    hiddenCurrency: "<%= buyer.currency %>",
    <% if (buyer.bidData != null) { %>
    totalBids: "<%= buyer.bidData.totalBids %>",
    hiddenTotalBidsPrice: "<%= buyer.bidData.totalPrice %>",
    validBids: "<%= buyer.bidData.validBids %>",
    hiddenValidBidsPrice: "<%= buyer.bidData.validBidsPrice %>",
    cancelledBids: "<%= buyer.bidData.cancelledBids %>",
    hiddenCancelledBidsPrice: "<%= buyer.bidData.cancelledBidsPrice %>",
    expiredBids: "<%= buyer.bidData.expiredBids %>",
    hiddenExpiredBidsPrice: "<%= buyer.bidData.expiredBidsPrice %>"
    <% } else { %>
    totalBids: 0,
    hiddenTotalBidsPrice: 0,
    validBids: 0,
    hiddenValidBidsPrice: 0,
    cancelledBids: 0,
    hiddenCancelledBidsPrice: 0,
    expiredBids: 0,
    hiddenExpiredBidsPrice: 0
    <% } %>
  }); 
  <% } %>
  
  initGrid(colModelSupervBuyers, data, "#supervBuyers", '#sbPager', "contactName", 'Supervisor\'s Buyers List', 1900);
    </script>
        <% } else {%>
        <div>
          <p style="color: green; font-family: arial">
            Sorry, no Buyers with your Organization UNITE ID are currently available. Please wait for their registration.
          </p>
        </div>
        <% }%>
</body>

</html>