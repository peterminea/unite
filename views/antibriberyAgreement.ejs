  <script src="/sweetalert2@9.min.js"></script>
  <script src="/https.js"></script>
  <script src="/functions.js"></script>
  <script type="text/javascript">
    $(document).ready(function() {
      let id = "<%= userId %>", 
      role = "<%= role %>", 
      avatar = "<%= avatar %>", 
      name = "<%= userName %>", 
      type = "<%= userType %>";
      userInputs(id, role, avatar, name, type, $('ul.mr-auto'));
      
      setTimeout(function() {    
        <% if(keys != null) { %>
        let i = 0, indexes = [];
       
        $('a.nav-link').each(function(ind, elem) {      
          indexes.push($(elem).attr('index'));
        });

        <% for(let k in keys) { %>   
        if(isInArray(i, indexes)) {
          $('a.nav-link span').eq(i).text('<%= eval(keys[k]) %>');
        }
        i++;
        <% } } %>
      }, 500);
    });
  </script>
</head>

<body>
   <nav pos="3" class="navbar navbar-expand-lg navbar-light bg-light" style="width: 100% !important;">
    <a class="navbar-brand" href="#">
